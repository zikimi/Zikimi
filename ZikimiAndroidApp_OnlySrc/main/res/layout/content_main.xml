<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.loopslab.customtabexample.MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/SecureLogo"
        android:background="@drawable/secure"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/LogoText"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/simpleTab"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/numberText"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="See your laptop"
        android:textSize="20dp"

        android:layout_centerHorizontal="true"
         />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Input your number"
        android:id="@+id/numberText"
        android:layout_below="@+id/SecureLogo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/logo"
        android:id="@+id/LogoText"

        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/Alert"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/simpleTab"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:text="Alert Sound ACT"
        android:textSize="20dp"

        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound On"
        android:background="@color/white"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/on"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/Alert"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound Off"
        android:background="@color/white"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/off"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/Alert"
        android:layout_alignLeft="@+id/on"
        android:layout_alignStart="@+id/on" />

</RelativeLayout>
